<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.bermanngatecontrol.Activities.ResultActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/foto_chofer"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:src="@drawable/default_user_profile" />

            <LinearLayout
                android:layout_toRightOf="@+id/foto_chofer"
                android:id="@+id/llDetalle"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- RUT CHOFER -->
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="@string/txt_cid"
                    android:textColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@id/txtRut"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="15299723-K"
                    android:textColor="#FFF"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



                <!-- NOMBRES CHOFER -->
                <TextView
                    android:text="@string/txt_firstname"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtNombres"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Víctor Andrés"
                    android:layout_width="match_parent"
                    android:textColor="#FFF"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"/>



                <!-- APELLIDOS CHOFER -->
                <TextView
                    android:text="@string/txt_lastname"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
                <TextView

                    android:id="@+id/txtApellidos"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Vargas Oyarzo"
                    android:textColor="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:text="Ultimos registros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/ListViewRegistros"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
