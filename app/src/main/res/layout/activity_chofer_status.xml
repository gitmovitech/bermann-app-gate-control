<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.bermanngatecontrol.Activities.ChoferStatusActivity">

    <RelativeLayout
        android:id="@+id/rlColor"
        android:background="@color/colorAprobado"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtRut"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:text="RUT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/txtRut"
            android:id="@+id/txtAcceso"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:text="Acceso mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:visibility="gone"
            android:id="@+id/btnDetalle"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:background="@color/colorPrimary"
            android:layout_margin="30dp"
            android:text="Ver detalle del chofer"
            android:layout_below="@+id/txtAcceso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>
