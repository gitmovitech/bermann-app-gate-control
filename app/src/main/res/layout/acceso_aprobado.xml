<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorAprobado"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:id="@+id/foto_chofer"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:src="@drawable/default_user_profile" />

            <TextView
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:layout_below="@+id/foto_chofer"
                android:text="ACCESO AUTORIZADO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- RUT -->
            <TextView
                android:layout_marginTop="10dp"
                android:text="@string/txt_cid"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtRut"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="15299723-K"
                android:textColor="#FFF"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <!-- NOMBRES CHOFER -->
            <TextView
                android:text="@string/txt_firstname"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtNombres"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Víctor Andrés"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>


            <!-- APELLIDOS CHOFER -->
            <TextView
                android:text="@string/txt_lastname"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />
            <TextView

                android:id="@+id/txtApellidos"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Vargas Oyarzo"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <!-- CELULAR -->
            <TextView
                android:text="@string/txt_celular"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />
            <TextView

                android:id="@+id/txtCelular"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="987654321"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/btnDetalle"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:background="@color/colorPrimary"
                android:layout_margin="30dp"
                android:text="Ver registros del chofer"
                android:layout_below="@+id/txtAcceso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>