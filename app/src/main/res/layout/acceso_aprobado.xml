<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorAprobadoVerde"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="0dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:background="@color/colorAprobadoVerdeOscuro"
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:id="@+id/foto_chofer"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:elevation="5dp"
                android:src="@drawable/default_user_profile" />

            <LinearLayout
                android:padding="10dp"
                android:paddingTop="0dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_below="@+id/foto_chofer"
                    android:text="ACCESO AUTORIZADO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <!-- NOMBRES CHOFER -->
                <TextView
                    android:textSize="22sp"
                    android:text="@string/txt_firstname"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/colorAprobadoVerdeOscuro"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtNombres"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="Víctor Andrés"
                        android:layout_width="wrap_content"
                        android:textColor="#FFF"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/txtApellidos"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:text="Vargas Oyarzo"
                        android:textColor="#FFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <!-- RUT -->
                    <TextView
                        android:text="@string/txt_cid"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="@color/colorAprobadoVerdeOscuro"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content" />

                    <!-- CELULAR -->
                    <TextView
                        android:text="@string/txt_celular"
                        android:layout_width="match_parent"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAprobadoVerdeOscuro"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtRut"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:text="15299723-K"
                        android:textColor="#FFF"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtCelular"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:text="987654321"
                        android:textColor="#FFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <Button
                    android:id="@+id/btnDetalle"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:background="@color/colorAprobadoVerdeOscuro"
                    android:layout_margin="5dp"
                    android:text="Ver registros del chofer"
                    android:layout_below="@+id/txtAcceso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>